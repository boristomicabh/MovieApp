<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MovieActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backdrop_movie_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside" />

            <Button
                android:id="@+id/favourite_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/backdrop_movie_image"
                android:background="@drawable/ic_favourite_movie" />

            <TextView
                android:id="@+id/movie_title_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/backdrop_movie_image"
                android:layout_toRightOf="@id/favourite_icon"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_duration_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_title_year"
                android:layout_toRightOf="@id/favourite_icon" />

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_duration_genre"
                android:paddingLeft="@dimen/left_padding_movie_feed" />

            <RelativeLayout
                android:id="@+id/overview_and_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/movie_poster"
                android:layout_alignTop="@id/movie_poster"
                android:layout_below="@id/movie_duration_genre"
                android:layout_toRightOf="@id/movie_poster">

                <ImageView
                    android:id="@+id/movie_reviews_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_movie_info" />

                <TextView
                    android:id="@+id/movie_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/movie_reviews_link"
                    android:paddingLeft="@dimen/left_padding_movie_feed" />


                <View
                    android:id="@+id/line_overview"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/movie_overview"
                    android:layout_margin="5dp"
                    android:layout_marginStart="@dimen/line_start"
                    android:background="#000000" />

                <RelativeLayout
                    android:id="@+id/video_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line_overview"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/movie_video_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_movie_video" />

                    <TextView
                        android:id="@+id/movie_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/movie_video_icon"
                        android:text="Videos" />

                    <ImageView
                        android:id="@+id/movie_video_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/ic_right_arrow" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/line_videos"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/movie_poster"
                android:layout_margin="5dp"
                android:layout_marginStart="@dimen/line_start"
                android:background="#000000" />

            <LinearLayout
                android:id="@+id/rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_videos"
                android:paddingLeft="@dimen/left_padding_movie_feed">

                <RelativeLayout
                    android:id="@+id/movie_api_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <RatingBar
                        android:id="@+id/movie_rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:isIndicator="true"
                        android:numStars="5" />

                    <RelativeLayout
                        android:id="@+id/movie_rating_numbers_total_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/movie_rating_bar">

                        <TextView
                            android:id="@+id/movie_rating_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movie_total_votes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/movie_rating_number" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/vertical_line_rating"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@id/movie_api_rating"
                    android:background="#000000" />

                <RelativeLayout
                    android:id="@+id/movie_user_rating_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/vertical_line_rating"
                    android:gravity="right"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/user_rating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_rating_title" />

                    <ImageView
                        android:id="@+id/user_rating_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/ic_right_arrow" />

                    <TextView
                        android:id="@+id/user_rating_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/user_rating_link"
                        android:text="@string/user_rating_value" />


                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/line_below_rating"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rating_layout"
                android:layout_margin="5dp"
                android:layout_marginStart="@dimen/line_start"
                android:background="#000000" />

            <TextView
                android:id="@+id/movie_cast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_below_rating"
                android:padding="10dp"
                android:text="@string/movie_cast"
                android:textStyle="bold" />

            <mobi.parchment.widget.adapterview.listview.ListView xmlns:parchment="http://schemas.android.com/apk/res/com.atlantbh.boristomic.movieapplication"
                android:id="@+id/movie_cast_list"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_below="@id/movie_cast_title"
                android:clipToPadding="false"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal"
                parchment:cellSpacing="5dp"
                parchment:orientation="horizontal"
                parchment:snapPosition="start"
                parchment:snapToPosition="true" />

            <TextView
                android:id="@+id/movie_gallery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_cast_list"
                android:padding="10dp"
                android:text="@string/movie_gallery_title"
                android:textStyle="bold" />

            <mobi.parchment.widget.adapterview.listview.ListView
                xmlns:parchment="http://schemas.android.com/apk/res/com.atlantbh.boristomic.movieapplication"
                android:id="@+id/movie_backdrop_list"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@id/movie_gallery_title"
                android:clipToPadding="false"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal"
                parchment:cellSpacing="5dp"
                parchment:orientation="horizontal"
                parchment:snapPosition="start"
                parchment:snapToPosition="true" />


        </RelativeLayout>


    </ScrollView>


</FrameLayout>
