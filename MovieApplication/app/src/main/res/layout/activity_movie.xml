<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Backdrop gallery -->
                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager_backdrop_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <!-- Default backdrop image -->
                <ImageView
                    android:id="@+id/default_backdrop_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <!-- Title and fav icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/movie_title_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3.2"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/favourite_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/ic_favourite_movie"
                        android:scaleType="fitCenter" />

                </LinearLayout>

                <!-- Genres and duration -->
                <TextView
                    android:id="@+id/movie_duration_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:paddingEnd="13dp"
                    android:paddingStart="13dp" />

                <!-- Poster and overview -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/colorWhite"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/movie_poster"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/movie_overview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="13dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="6.5"
                        android:maxLines="8"
                        android:textColor="@color/colorBackground" />

                </LinearLayout>

                <!-- Trailer and reviews components -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Trailer components -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/movie_video"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.2"
                            android:text="@string/trailer_title"
                            android:textAlignment="center"
                            android:textColor="@color/colorBackground" />

                        <ImageView
                            android:id="@+id/movie_video_link"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/ic_movie_video" />

                    </LinearLayout>

                    <!-- Reviews components -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.2"
                            android:text="@string/reviews_title"
                            android:textAlignment="center"
                            android:textColor="@color/colorBackground" />

                        <ImageView
                            android:id="@+id/movie_reviews_link"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:src="@drawable/ic_movie_info" />

                    </LinearLayout>

                </LinearLayout>


                <!-- Rating components -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- API rating components -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/movie_rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="@color/colorPrimary"
                            android:secondaryProgressTint="@color/colorPrimary"
                            android:progressBackgroundTint="@color/colorPrimary"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/movie_rating_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@color/colorBackground"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/movie_total_votes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@color/colorBackground" />
                        </LinearLayout>


                    </LinearLayout>

                    <!-- Own rating components -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/user_rating_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_rating_title"
                            android:textAlignment="center"
                            android:textColor="@color/colorBackground" />

                        <TextView
                            android:id="@+id/user_rating_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_rating_value"
                            android:textAlignment="center"
                            android:textColor="@color/colorBackground"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/user_rating_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_right_arrow" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Cast components-->
                <TextView
                    android:id="@+id/movie_cast_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/colorWhite"
                    android:padding="10dp"
                    android:text="@string/movie_cast"
                    android:textColor="@color/colorBackground"
                    android:textStyle="bold" />

                <mobi.parchment.widget.adapterview.listview.ListView xmlns:parchment="http://schemas.android.com/apk/res/com.atlantbh.boristomic.movieapplication"
                    android:id="@+id/movie_cast_list"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:layout_below="@id/movie_cast_title"
                    android:clipToPadding="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="horizontal"
                    parchment:cellSpacing="5dp"
                    parchment:orientation="horizontal"
                    parchment:snapPosition="start"
                    parchment:snapToPosition="true" />

            </LinearLayout>


        </ScrollView>


    </android.support.design.widget.CoordinatorLayout>

    <!--Drawer list-->
    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        android:choiceMode="singleChoice"
        android:divider="@color/colorGray"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />

</android.support.v4.widget.DrawerLayout>

