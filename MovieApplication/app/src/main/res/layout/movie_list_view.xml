<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp">


    <ImageView
        android:id="@+id/list_movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
      />

    <TextView
        android:id="@+id/list_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_movie_poster"
        android:layout_alignLeft="@id/list_movie_poster"
        android:layout_alignRight="@id/list_movie_poster" />

    <TextView
        android:id="@+id/list_movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_movie_title"
        android:layout_alignStart="@+id/list_movie_title"
        />

</RelativeLayout>